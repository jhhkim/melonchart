{{>layout/header}}

<div class="form-group">
    <label for="song" class="mb-2 mr-sm-2">노래 입력</label>
    <input type="text" class="form-control mb-2 mr-sm-2" id="song" placeholder="노래제목을 입력하시오" name="song">
</div>

<div class="form-group">
    <label for="song_link" class="mb-2 mr-sm-2">노래 링크 입력</label>
    <input type="text" class="form-control mb-2 mr-sm-2" id="song_link" placeholder="노래 링크를 입력하시오" name="song">
</div>

<button type="button" id="saveBtn" class="btn btn-primary mb-2">playlist 추가</button>
<br><br><br>

<h5>My Playlist</h5>
<table class="tabel table-hover">
    <thead>
        <tr>
            <th>번호</th>
            <th>노래 제목</th>
            <th>노래 링크</th>
        </tr>
    </thead>
    <tbody>
        {{ #playlist }}
        <tr style="cursor:pointer" onclick="modal_show('{{ id }}', '{{ song }}', '{{ songLink }}')">
          <td>{{ id }}</td>
          <td>{{ song }}</td>
          <td>{{ songLink }}</td>
        </tr>
        {{ /playlist }}
      </tbody>
</table>

<!-- The Modal -->
<div class="modal" id="myModal">
    <div class="modal-dialog">
      <div class="modal-content">
      
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">노래 제목 수정</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        
        <!-- Modal body -->
        <div class="modal-body">
         <div class="form-group">
          <label for="song" class="mb-2 mr-sm-2">노래 번호</label>
          <input type="text" class="form-control mb-2 mr-sm-2" id="m_id" readonly>
        </div>
          <div class="form-group">
          <label for="song" class="mb-2 mr-sm-2">노래 제목</label>
          <input type="text" class="form-control mb-2 mr-sm-2" id="m_song">
        </div>
        <div class="form-group">
          <label for="song_link" class="mb-2 mr-sm-2">노래 링크</label>
          <input type="text" class="form-control mb-2 mr-sm-2" id="m_imglink">
        </div>
        
        </div>
        
        <!-- Modal footer -->
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">취소</button>
          <button type="button" id="updateBtn" class="btn btn-primary">수정</button>
          <button type="button" id="delBtn" class="btn btn-danger">삭제</button>
        </div>
        
      </div>
    </div>
  </div>
  <!-- The Modal -->

<script src="/js/playlist.js"></script>
{{>layout/footer}}